<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_color"
    tools:context=".WorkerComplaint">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mainLayout"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:text="Post Complaint"
                android:textSize="20sp"
                android:fontFamily="cursive"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/whiteColor"
                android:textStyle="bold"
                android:id="@+id/topText"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:id="@+id/complainTitle"
                android:textColorHint="@color/whiteColor"
                android:textColor="@color/whiteColor"
                android:drawableStart="@drawable/title"
                android:drawablePadding="10dp"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:id="@+id/complainAddress"
                android:textColorHint="@color/whiteColor"
                android:textColor="@color/whiteColor"
                android:drawableStart="@drawable/address"
                android:drawablePadding="10dp"
                android:layout_marginTop="10dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:id="@+id/complainDesc"
                android:textColor="@color/whiteColor"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/whiteColor"
                android:drawableStart="@drawable/desc"
                android:drawablePadding="10dp"
                />
            <Button
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Post Complain"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:textStyle="bold"
                android:id="@+id/postComplain"
                android:background="@drawable/btn_bg"
                android:textColor="@color/whiteColor"
                />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>